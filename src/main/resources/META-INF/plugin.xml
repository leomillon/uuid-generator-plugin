<idea-plugin>
  <id>com.github.leomillon.uuidgenerator</id>
  <name>UUID Generator</name>
  <version>3.0.0</version>
  <vendor email="millon.leo@gmail.com" url="https://github.com/leomillon">LÃ©o Millon (@leo_millon)</vendor>

  <description><![CDATA[
      A universally unique identifier (UUID) generator.<br/>
      <br/>
      For example : <em>123e4567-e89b-12d3-a456-426655440000</em>.<br/>
      <br/>
      You will find it in the <strong>Generate popup</strong> -> <strong>Random UUID</strong>.
      <br/>
      Available actions :
      <ul>
        <li>Random UUID</li>
        <li>Generate UUID to clipboard</li>
        <li>Toggle UUID dashes</li>
      </ul>
      <p>
        <img src="https://raw.githubusercontent.com/leomillon/uuid-generator-plugin/3.0.0/screenshots/generate_random_uuid.png"
                 border="0" width="500" height="72" alt="generate_random_uuid"/></p>
      </p>
      <p>
        <img src="https://raw.githubusercontent.com/leomillon/uuid-generator-plugin/3.0.0/screenshots/multi_caret_support.png"
                 border="0" width="500" height="171" alt="multi_caret_support"/></p>
      </p>
      <p>
        <img src="https://raw.githubusercontent.com/leomillon/uuid-generator-plugin/3.0.0/screenshots/toggle_dashes.png"
                 border="0" width="500" height="162" alt="toggle_dashes"/></p>
      </p>
      <p>
        <img src="https://raw.githubusercontent.com/leomillon/uuid-generator-plugin/3.0.0/screenshots/uuid_to_clipboard.jpg"
                 border="0" width="500" height="101" alt="uuid_to_clipboard"/></p>
      </p>
      <p>
        <img src="https://raw.githubusercontent.com/leomillon/uuid-generator-plugin/3.0.0/screenshots/uuid_settings_dialogue.png"
                 border="0" width="500" height="369" alt="uuid_settings_dialogue"/></p>
      </p>
      ]]>
  </description>

  <change-notes><![CDATA[
        <b>Changes in version 3.0.0:</b>
        <ul>
            <li>
              Settings dialogue to define the UUID format
            </li>
            <li>
              Code language migration to Kotlin
            </li>
        </ul>
        ]]>
  </change-notes>

  <idea-version since-build="143.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationConfigurable instance="com.github.leomillon.uuidgenerator.settings.UUIDGeneratorConfigurable"/>
    <applicationService serviceInterface="com.github.leomillon.uuidgenerator.settings.UUIDGeneratorSettings"
                        serviceImplementation="com.github.leomillon.uuidgenerator.settings.UUIDGeneratorSettings"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="uuidgenerator.random" class="com.github.leomillon.uuidgenerator.GenerateRandomAction" text="Random UUID"
            description="Generate an universally unique identifier (UUID)">
      <add-to-group group-id="GenerateGroup" anchor="last"/>
      <keyboard-shortcut keymap="$default" first-keystroke="shift meta alt U" second-keystroke="shift meta alt U" />
    </action>
    <action id="uuidgenerator.to-clipboard" class="com.github.leomillon.uuidgenerator.GenerateToClipboardAction" text="Generate UUID to clipboard"
            description="Generate a new UUID to clipboard">
      <add-to-group group-id="GenerateGroup" />
      <keyboard-shortcut keymap="$default" first-keystroke="shift meta alt U" second-keystroke="shift meta alt C" />
    </action>
    <action id="uuidgenerator.toggle-dashes" class="com.github.leomillon.uuidgenerator.ToggleDashesAction" text="Toggle UUID dashes"
            description="Toggle the dashes of a valid UUID">
      <add-to-group group-id="EditorActions" />
      <keyboard-shortcut keymap="$default" first-keystroke="shift meta alt T" second-keystroke="shift meta alt T" />
    </action>
  </actions>

</idea-plugin>
